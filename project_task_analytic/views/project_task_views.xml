<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//header/field[@name='stage_id']" position="before">
                <field name="completed" invisible="True"/>
                <button name="action_task_done" string="Task Completed" type="object" class="btn-primary" attrs="{'invisible':[('completed','=', True)]}"/>
            </xpath>
            <xpath expr="//notebook/page[2]/group[1]" position="after">
                <group>
                    <group>
                        <field name="budget_ratio"/>
                        <field name="budget_amt" widget="monetary"/>
                        <field name="currency_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
