<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_fields_tks.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[1]" position="before">
                <group>
                    <label for="sales_amt"/>
                    <div>
                        <div class="o_row mr16">
                            <field name="sales_amt" widget="monetary"/>
                            <field name="currency_id" options="{'no_create':True, 'no_open':True}"/>
                        </div>
                    </div>
                    <field name="profit_percent"/>
                    <field name="labor_ratio"/>
                    <field name="budget_amt"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='cad_partner_id']" position="after">
                <field name="quotation_done"/>
                <field name="layout_done"/>
                <field name="invoice_done"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">view.project.tree</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_fields_tks.view_project_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cad_partner_id']" position="after">
                <field name="budget_amt"/>
                <field name="quotation_done"/>
                <field name="layout_done"/>
                <field name="invoice_done"/>
            </xpath>
        </field>
    </record>

</odoo>
